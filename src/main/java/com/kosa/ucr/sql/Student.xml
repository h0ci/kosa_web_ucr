<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kosa.ucr.user.dto.StudentMapper">
	<resultMap id="StudentMap" type="Student" autoMapping="true">
		<!-- 기존 것 맵핑 -->
		<id property="stuId" column="stu_id"/>
		<result property="stuName" column="stu_name"/>
		<result property="stuEmail" column="stu_email"/>
		<result property="stuPhone" column="stu_phone"/>
		<result property="stuGrades" column="stu_grades"/>
			<!-- major엔티티와 1:1 관계 맵핑 -->
			<association property="mName" javaType="com.kosa.ucr.course.dto.Major" autoMapping="true">
    			<id property="mName" column="m_name"/>
			</association>
			
	</resultMap>
	<select id="selectByCourse" resultMap="StudentMap">
		SELECT s.stu_id, stu_name, stu_email, stu_phone, stu_grades, m.m_name
		FROM registration r join course c on(r.co_code=c.co_code)
    	    	       		join student s on (r.stu_id=s.stu_id)
        	    		    join procourse pc on (pc.co_code=c.co_code)
            	   		 	join major m on (m.m_no=c.m_no)
                			join professor p on (p.pro_id=pc.pro_id)
		WHERE r.co_code=#{coCode}
	</select>
</mapper>