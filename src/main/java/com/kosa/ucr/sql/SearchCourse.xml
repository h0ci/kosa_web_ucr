<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.kosa.ucr.course.SearchCourseMapper">
   
	<resultMap type="Course" id="CourseMap" autoMapping="true">
    <id property="coCode" column="co_code"></id>
    <result property="coName" column="co_name"/>
    <result property="coYear" column="co_year"/>
    <result property="coLimit" column="co_limit"/>
    <result property="coCredit" column="co_credit"/>
 	<result property="classroom" column="classroom"/>
    <result property="division" column="division"/>
    <result property="coDay" column="co_day"/>
    <result property="coTime" column="co_time"/>      
    <result property="regiCnt" column="regi_cnt"/>                  
    <association property="mName" javaType="Major">
        <id property="mNo" column="m_no"/>
    </association>
    <association property="proName" javaType="Professor">
        <id property="proName" column="pro_name"/>
    </association>
</resultMap>


  
<select id="searchCourses" resultType="Course">
    SELECT c.co_code, co_name, co_year, co_limit, co_credit, co_day, co_time, classroom, 
           division, m.m_name AS mName, p.pro_name AS proName
    FROM course c
    JOIN major m ON (m.m_no=c.m_no)
    LEFT JOIN procourse pc ON (c.co_code=pc.co_code)
    LEFT JOIN professor p ON (pc.pro_id=p.pro_id)
    <where>
        <if test="condition != null">
            AND ${condition}
        </if>
    </where>
</select>

  
  
  </mapper>